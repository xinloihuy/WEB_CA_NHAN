{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "providers": ["java"],
      "phases": {
        "setup": {
          "nixPkgs": ["jdk17"]
        },
        "build": {
          "cmd": "mvn clean package -DskipTests"
        }
      }
    }
  },
  "deploy": {
    "startCommand": "java -jar target/*.jar"
  }
}